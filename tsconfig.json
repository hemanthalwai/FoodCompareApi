{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES6",
        "moduleResolution": "Node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "watch": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "config/*.ts",
        "auth/*.ts",
        "db/*.ts",
    ],
    "lib": ["es2015", "DOM"],
    "exclude": [
        "node_modules",
        ".vscode"
    ]
}